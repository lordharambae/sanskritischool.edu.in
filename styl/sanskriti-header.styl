section.sanskriti-header
	width 100%
	height 140px
	display flex
	flex-flow column wrap
	z-index 1
	
	> div.sanskriti-brand
			width 100%
			height 60px
			display flex
			align-items center
			justify-content center
			background rgb(35,50,65)

		h1.sanskriti-text.heading
			font 100 32px/1 "Engravers Old English"
			color white
		
	div.sanskriti-nav
		width 100%
		height 40px
		display flex
		justify-content center
		
		&[active="false"]
			display none

		&[active="true"]
			display flex

		&.primary
			background rgb(35,50,65)
			
		&.secondary
			background rgb(30,45,60)
			
			div.sanskriti-nav-list
			
				&[active="false"]
					display none

				&[active="true"]
					display flex
			
		div.sanskriti-nav-list
			padding 13px
			flex 0 1 auto
			overflow auto
			font 300 14px/1 "Open Sans"
			letter-spacing 2px
			white-space nowrap
			
			&::-webkit-scrollbar
				display none

					
			a.sanskriti-list-item
				padding 0 13px
				
				&:link, &:visited
					color rgb(150,160,170)
					
				&:hover, &:visited:hover, &:focus
					color lighten(rgb(150,160,170), 40%)
			